##########################################################################################
# Default FirmwareDroid Configuration
# This file provides sensible defaults to run FirmwareDroid without running setup.py
# 
# To customize your installation:
# 1. Copy this file to .env and modify as needed, or
# 2. Run python setup.py for interactive configuration
##########################################################################################

##########################################################################################
# Global Configuration
##########################################################################################
APP_ENV=development
APP_DEBUG=True

# Docker Storage - using relative paths from project root
LOCAL_STORAGE_PATH_00=./data/00_file_storage
LOCAL_STORAGE_PATH_01=./data/01_file_storage
LOCAL_STORAGE_PATH_02=./data/02_file_storage
LOCAL_STORAGE_PATH_03=./data/03_file_storage
LOCAL_STORAGE_PATH_04=./data/04_file_storage
LOCAL_STORAGE_PATH_05=./data/05_file_storage
LOCAL_STORAGE_PATH_06=./data/06_file_storage
LOCAL_STORAGE_PATH_07=./data/07_file_storage
LOCAL_STORAGE_PATH_08=./data/08_file_storage
LOCAL_STORAGE_PATH_09=./data/09_file_storage
LOCAL_MONGO_DB_PATH_NODE1=./data/mongo_database

# Docker Memory Limits
DOCKER_CPU_LIMIT=0.5
DOCKER_MEMORY_LIMIT=10GB
DOCKER_MEMORY_SWAP_LIMIT=10GB

# Redis Database Configuration
REDIS_CONFIG_PATH=./env/redis/redis.conf
REDIS_PASSWORD=firmwaredroid-default-redis-password
REDIS_PORT=6379

# MongoDB Configuration
MONGODB_DATABASE_NAME=FirmwareDroid
MONGODB_AUTH_SRC=admin
MONGODB_PORT=27017
MONGODB_REPLICA_SET=mongo_cluster_1
MONGO_INITDB_ROOT_USERNAME=mongodbroot
MONGO_INITDB_ROOT_PASSWORD=firmwaredroid-default-mongo-root-password
MONGODB_USERNAME=mongodbuser
MONGODB_PASSWORD=firmwaredroid-default-mongo-user-password
MONGODB_HOSTNAME=mongo-db-1

# Web Configuration
MASS_IMPORT_NUMBER_OF_THREADS=3
DOMAIN_NAME=fmd.localhost
API_TITLE=FirmwareDroid REST API
API_VERSION=1.0
API_DESCRIPTION=REST API documentation for the FirmwareDroid service
API_PREFIX=/api
API_DOC_FOLDER=/docs
CORS_ADDITIONAL_HOST=fmd-aosp.init-lab.ch
DJANGO_SECRET_KEY=firmwaredroid-default-secret-key-change-in-production
DJANGO_SQLITE_DATABASE_PATH=/var/www/data/django_database/
DJANGO_SQLITE_DATABASE_MOUNT_PATH=./data/django_database/
DJANGO_SUPERUSER_PASSWORD=admin
DJANGO_SUPERUSER_USERNAME=fmd-admin
DJANGO_SUPERUSER_EMAIL=fmd-admin@fmd.localhost

# Container constants - DO NOT CHANGE
APP_PORT=5000
PYTHONPATH="/home/www/source/"